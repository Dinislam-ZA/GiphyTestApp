<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VkTestApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <!-- Дополнительные атрибуты для красоты -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MyInfoTextViewStyle">
        <item name="android:textColor">@color/searchview_background</item>
        <item name="android:textSize">24sp</item>
        <!-- Дополнительные атрибуты для красоты -->
        <item name="android:letterSpacing">0.25</item>
    </style>
</resources>